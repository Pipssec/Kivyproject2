<ListOrders>:
    canvas.before:
        Color:
            rgb: 0.5882, 0.2941, 0, 1
        Rectangle:
            size: self.size
    FloatLayout:
        AsyncImage:
            source: 'data/logo2.jpg'
            size_hint_y: 1
            y: root.height - self.height
    BoxLayout:
        orientation: 'vertical'

        RecycleView:
            data: root.data
            viewclass: 'Itembutton'

            RecycleBoxLayout:
                orientation: 'vertical'
                padding: dp(20)
                spacing: dp(10)
                default_size: None, dp(50)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height

        Itembutton:
            text: 'Меню'
            on_press: root.manager.current = root.menu()
            size_hint: 1, .1
            # size: "100dp", "60dp"
            # width: "100dp"
            # height: "60dp"
            # x, center_x, right
            # y, center_y, top
            pos_hint: { "center_y": .5 }

