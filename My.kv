#:kivy 1.4

<MenuScreen>:
    canvas.before:
        Color:
            rgb: 0.5882, 0.2941, 0, 1
        Rectangle:
            size: self.size
    FloatLayout:
        AsyncImage:
            source: 'data/logo2.jpg'
            size_hint_x: 1
            #y: root.height - self.height


    FloatLayout:
        Itembutton:
            text: "Список\nзаказов"
            pos_hint: {'x': .15, 'y': .6}
            size_hint: .2, .2
            on_press: root.manager.current = 'list_orders'



        Itembutton:
            text: "Список\n   СТО"
            pos_hint: {'x': .65, 'y': .6}
            size_hint: .2, .2
            on_press: root.manager.current = 'liststo'

        Itembutton:
            text: "О нас"
            pos_hint: {'x': .0, 'y': .9}
            size_hint: 1, .1
            on_press: root.manager.current = 'about_us'

        Itembutton:
            text: "Создать\nзаказ"
            pos_hint: {'x': .15, 'y': .3}
            size_hint: .2, .2
            on_press: root.manager.current = 'createorder'

        Itembutton:
            text: "Авторизация"
            pos_hint: {'x': .5, 'y': .0}
            size_hint: .5, .1
            on_press: root.manager.current = 'authorization'

        Itembutton:
            text: "Регистрация"
            pos_hint: {'x': .0, 'y': .0}
            size_hint: .5, .1
            on_press: root.manager.current = 'registration'

