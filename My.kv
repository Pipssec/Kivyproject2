<NoSignal>:
    canvas.before:
        Color:
            rgb: 0.5882, 0.2941, 0, 1
        Rectangle:
            size: self.size
    FloatLayout:
        AsyncImage:
            source: 'data/logo2.jpg'
            allow_stretch: True
            keep_ratio: False

    FloatLayout:
        Label:
            text: 'Ошибка связи '
            size_hint: .5, .6
            pos_hint: {'x':.3, 'y': .35}
            color: 0, .35, .35
            font_size: 70
        Itembutton:
            text: 'Меню'
            size_hint: 1, .1
            pos_hint: {'x':.0, 'y': .0}
            on_press: root.manager.current = root.menu()

<Itembutton@Button>:
    #color: 0, 0, 0
    background_color: 0.5882, 0.2941, 0, .4
    canvas.before:
        Color:
            rgba: 0.5882, 0.2941, 0.3, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
